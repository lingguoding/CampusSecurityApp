<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/MatchWrap.Horizontal"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/selector_item_folder"
              android:gravity="center_vertical"
              android:padding="@dimen/size_level2">

    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="@dimen/size_level2"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_gallery_holder"/>

    <LinearLayout style="@style/MatchWrap.Vertical">

        <TextView
            android:id="@+id/name_tv"
            style="@style/MatchWrap"
            android:singleLine="true"
            android:textColor="#747b83"
            android:textSize="@dimen/textSize_level2"
            tools:text="文件夹名称"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/size_level2"
            android:singleLine="true"
            android:textColor="#747b83"
            android:textSize="@dimen/textSize_level1"
            tools:text="168"/>
    </LinearLayout>
</LinearLayout>