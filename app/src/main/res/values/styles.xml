<resources>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="comm_btn_style_level1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_login_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/btn_padding_level1</item>
        <item name="android:textSize">@dimen/textSize_level1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="comm_btn_style_level2" parent="comm_btn_style_level1">
        <item name="android:padding">@dimen/btn_padding_level2</item>
        <item name="android:textSize">@dimen/textSize_level2</item>
    </style>

</resources>
